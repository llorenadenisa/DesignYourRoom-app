<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#d7e4fa">


    <ImageView
        android:id="@+id/edit_img_view"
        android:layout_width="match_parent"
        android:layout_height="633dp"
        android:layout_above="@+id/colors"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/description" />

    <Button
        android:id="@+id/colors"
        android:layout_width="131dp"
        android:layout_height="103dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/palette"
        android:text="Colors" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="76dp"
        android:text="Pick a color"
        android:textSize="40dp" />

    <Button
        android:id="@+id/detect_obj"
        android:layout_width="169dp"
        android:layout_height="116dp"
        android:layout_below="@+id/edit_img_view"
        android:layout_marginStart="111dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="-30dp"
        android:layout_toEndOf="@+id/colors"
        android:background="@drawable/chair"
        android:text="Detect" />

</RelativeLayout>